@model List<Movie>
@{
    ViewData["Title"] = "Cart";
}



<h1>Your Cart</h1>

<br />
<div class="row">
    <table class="table table-dark ">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>                   
                        <td>@item.Name</td>
                        <td>@item.Price</td>                      
                        <td>
                            <a  asp-action="RemoveFromCart" asp-controller="Home" asp-route-name="@item.Name" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Movies" class="btn btn-success">Continue Shopping</a>
    </div>
    <div class="col-6 text-right">
        <h3>Total Amount</h3>
        <h3>Grant Total : @Model.Sum(c=>c.Price) </h3>
        <a  asp-action="Checkout" asp-controller="Home" class="btn btn-warning mt-3">Process to Checkout</a>
    </div>
</div>